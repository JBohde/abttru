<div class="col-sm-6 col-md-4 recipe-card">
  <div class="thumbnail">
    <a href="{{this.recipe}}" target="_blank">
      <img class="img-fluid recipe-img" src="{{this.recipeImg}}" alt="{{this.recipeName}}">
    </a>
  </div>
  <div class="caption">
    <h4 class="recipe-name">{{this.recipeName}}</h4>
  </div>
  <a href="{{this.recipe}}" target="_blank">
    <button
      class="btn btn-primary get-recipe">
      GET RECIPE
    </button>
  </a>
  <button
    class="btn btn-default change-favorite"
    data-id="{{this.id}}"
    value={{this.recipe}}
    data-toggle="modal"
    data-target="#login-modal"
    data-favorite="{{this.favorite}}">
    {{#if favorite}}MY FAVORITE{{else}}MAKE FAVORITE{{/if}}
  </button>
  <button
    class="btn btn-danger delete-recipe"
    data-id="{{this.id}}"
    value={{this.recipeUri}}
    data-toggle="modal"
    data-target="#login-modal">
    DELETE RECIPE
  </button>
</div>