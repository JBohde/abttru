<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>USER INFO</h1>
      <div class="panel panel-default patient-info" style="overflow-x:auto;">
        <table style="width:100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Risk Factor</th>
              <th>Recommended Diet</th>
              <th>Allergies/Restrictions</th>
            </tr>
          </thead>
          <tbody>
            {{> patients/patient-block}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row recipe-area" style='display:none'>
    <div class="col-xs-0 col-sm-2"></div>
    <div class="col-xs-12 col-sm-4">
      <div id="panel-slider" class="panel panel-default">
        <div class="panel-body">
          <div id="sliders" data-ride="carousel" data-pause="true">
              <div class="carousel-inner" role="listbox"></div>
            <div id="controls">
              <a class="left" href="#sliders" data-slide="prev" title="Previous
                Slide">
                <span class="glyphicon glyphicon-chevron-left"></span>
              </a>
              <i id="pause" class="fa fa-pause" title="Pause"></i>
              <i id="play" class="fa fa-play" title="Play"></i>
              <a class="right" href="#sliders" data-slide="next" title="Next
                Slide">
                <span class="glyphicon glyphicon-chevron-right"></span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 plotlyjs-container">
      <div class='buttons-wrapper'>
        <button id="macros" class="btn btn-default btn-sm plot-btn">MACROS</button>
        <button id="fats" class="btn btn-default btn-sm plot-btn">FATS</button>
        <button id="minerals" class="btn btn-default btn-sm plot-btn">MINERALS</button>
        <button id="vitamins" class="btn btn-default btn-sm plot-btn">VITAMINS</button>
      </div>
      <div id="macros-container" class="donut-container-active"></div>
      <div id="fats-container" class="donut-container"></div>
      <div id="minerals-container" class="donut-container"></div>
      <div id="vitamins-container" class="donut-container"></div>
    </div>
    <div class="col-xs-0 col-sm-2 col-md-2 col-lg-2"></div>
  </div>
  <div class="row">
    <div class="col-xs-0 col-sm-0 col-md-1 col-lg-1"></div>
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
      <h1>RECIPE BOX</h1>
      <div class="patient-info">
        {{#each recipes}} {{> recipes/recipe-block}} {{/each}}
      </div>
    </div>
    <div class="col-xs-0 col-sm-0 col-md-1 col-lg-1"></div>
  </div>
</div>
<!-- Modal -->
<div id="login-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <img src="/css/ABetterYou.png" id="brand-logo">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2 class="modal-title">
          A BETTER YOU
        </h2>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary close">close</button>
      </div>
    </div>
  </div>
</div>
<div class="bottom">
  <footer id="footer">
    <nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="container-fluid footer-place">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-footer">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-footer">
            <a href="/">
              <img src="/css/ABetterYou.png" id="footer-logo">
            </a>
          </div>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>
  </footer>
  {{#each scripts}}
  <script src="{{script}}"></script>
  {{/each}}
  {{#each links}}
  <link rel="stylesheet" href="{{link}}" type="text/css" />
  {{/each}}