<div>{{> nav/nav-block }}</div>
<main>
  <div class="container">
    <div class="col-md-6 panel panel-default error-info">
      {{#if errors}}
      <div class="alert alert-danger">
        {{#each errors}} {{> errors/error-block}} {{/each}}
      </div>
      <form action="/doctor/form" method="get">
        <input type="submit" class="alert alert-danger" value="RETURN TO FORM">
      </form>
      {{/if}}
    </div>
    <div class="row">
      <div class="col-md-12">
        <h1>WELCOME TO A BETTER YOU!</h1>
      </div>
    </div>
    <div class="row mb-5">
      <div class="col-md-6">
      </div>
      <div class="col-md-6">
        <select class="custom-select login" id="login" name="login">
          <option value="" disabled selected hidden>Select login option</option>
          <option class="login-option">Patient</option>
          <option class="login-option">Dietitian</option>
        </select>
        <div class='login-wrapper'>
        <form class='patient-form' action="/profile" method="post">
          <div class="form-group">
            <label for="user-email" class="col-form-label">Email</label>
            <input type="text" class="form-control" id="user-email" placeholder="Email" name="email">
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-form-label">Password</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
          </div>
          <button type="submit" class="btn btn-primary login-btn" value="Submit">Sign In</button>
        </form>
        <form class='doctor-form' action="/doctor" method="post">
          <div class="form-group">
            <label for="doctor-email" class="col-form-label">Email</label>
            <input type="text" class="form-control" id="doctor-email" placeholder="Email" name="email">
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-form-label">Password</label>
            <input type="password" class="form-control" id="doctor-password" placeholder="Password" name="password">
          </div>
          <button type="submit" class="btn btn-primary login-btn" value="Submit">Sign In</button>
        </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-sm-4 offset-sm-1">
      <div class='recipe-area' style='display:none'>
      <div id="sliders" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner"></div>
        <a class="carousel-control-prev left" href="#sliders" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next right" href="#sliders" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-4 offset-sm-1">
      <form>
        <div class="form-group">
          <div class="input-group mb-3">
            <input placeholder="Ingredients(e.g. chicken)" type="text" class="form-control" id="user-input">
            <div class="input-group-append">
              <span>
                <button type="submit" class="btn btn-success search">
                  <i class="fas fa-search"></i>
                </button>
              </span>
            </div>
          </div>
        </div>
      </form>
      <select class="custom-select mb-2" id="diet-factor">
        <option class="diet-option">Balanced</option>
        <option class="diet-option">High-Protein</option>
        <option class="diet-option">Low-Carb</option>
        <option class="diet-option">Low-Fat</option>
        {{!-- <option class="diet-option">High-Fiber</option> --}}
        {{!-- <option class="diet-option">Low-Sodium</option> --}}
      </select>
      <select class="custom-select" id="diet-restriction">
        <option class="restrict-option">Peanut-free</option>
        <option class="restrict-option">Vegan</option>
        <option class="restrict-option">Vegetarian</option>
        <option class="restrict-option">Sugar-conscious</option>
        <option class="restrict-option">Alcohol-free</option>
        {{!-- <option class="restrict-option">Crustacean-Free</option> --}}
        {{!-- <option class="restrict-option">Dairy-Free</option> --}}
        {{!-- <option class="restrict-option">Kosher</option> --}}
        {{!-- <option class="restrict-option">Gluten-Free</option> --}}
        {{!-- <option class="restrict-option">Low-Sugar</option> --}}
        {{!-- <option class="restrict-option">Paleo</option> --}}
        {{!-- <option class="restrict-option">Pescatarian</option> --}}
      </select>
    </div>
  </div>
</main>
<script src="js/login.js" type="text/javascript"></script>