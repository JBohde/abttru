<div class="row">
</div>
<h1>PATIENT LIST</h1>
<div class="row">
  <div class="col-xs-1 col-md-2"></div>
  <div class="col-xs-10 col-md-8 panel panel-default patient-info">
    <table style="width:100%">
      <thead>
        <tr>
          <th>Patient Name</th>
          <th>Risk Factor</th>
          <th>Recommended Diet</th>
          <th>Allergies/Restrictions</th>
        </tr>
      </thead>
      <tbody>
        {{#each patients}} {{> doctors/patient-block}} {{/each}}
      </tbody>
    </table>
  </div>
  <div class="col-xs-1 col-md-2"></div>
</div>

{{!-- </div> --}}
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    {{#if errors}}
    {{> errors/error-block}}
    <a class="btn btn-secondary" href={{redirectLink}}>Return to form</a>
    {{/if}}
  </div>
  <div class="col-md-2"></div>
</div>
<div class="row">
  <div class="col-xs-1 col-md-2"></div>
  <div class="col-xs-10 col-md-8 panel panel-default" style="background: rgba(44, 62, 79, 0.2); padding:10px"
    id="doctor-panel">
    <br>
    <h2>ADD A PATIENT</h2>
    <form id="patient-input" method="post" action={{createPatientLink}}>
      <div class="form-group">
        <label for="patient-first">First Name:</label>
        <input placeholder="First Name" type="text" class="form-control" id="patient-first" name="firstName">
        <br>
        <label for="patient-last">Last Name:</label>
        <input placeholder="Last Name" type="text" class="form-control" id="patient-last" name="lastName">
        <br>
        <label for="patient-email">email:</label>
        <input placeholder="Email" type="text" class="form-control" id="patient-email" name="email">
        <br>
        <label for="patient-password">Password:</label>
        <input placeholder="Password" type="text" class="form-control" id="patient-password" name="password">
        <br>
        <label for="riskFactor" name="riskFactor">Risk Factor:</label>
        <select class="form-control form-control-lg" id="riskFactor" name="riskFactor">
          <option class="risk-option">Healthy</option>
          <option class="risk-option">High Cholesterol</option>
          <option class="risk-option">Diabetes</option>
          <option class="risk-option">Obesity</option>
          {{!-- <option class="risk-option">High Blood Pressure</option>
          <option class="risk-option">Malnourishment</option> --}}
        </select>
        <br>
        <label for="diet-recommendation">Diet Recommendation:</label>
        <select class="form-control form-control-lg" id="dietRecommendation" name="dietRecommendation">
          <option class="diet-option">Balanced</option>
          <option class="diet-option">High-Protein</option>
          <option class="diet-option">Low-Carb</option>
          <option class="diet-option">Low-Fat</option>
          {{!-- <option class="diet-option">High-Fiber</option>
          <option class="diet-option">Low-Sodium</option> --}}
        </select>
        <br>
        <label for="dietRestriction">Diet Restriction:</label>
        <select class="form-control form-control-lg" id="dietRestriction" name="diet_restriction">
          <option class="restrict-option">Peanut-free</option>
          <option class="restrict-option">Vegan</option>
          <option class="restrict-option">Vegetarian</option>
          <option class="restrict-option">Sugar-conscious</option>
          <option class="restrict-option">Alcohol-free</option>
          {{!-- <option class="restrict-option">Crustacean-Free</option>
          <option class="restrict-option">Dairy-Free</option>
          <option class="restrict-option">Kosher</option>
          <option class="restrict-option">Gluten-Free</option>
          <option class="restrict-option">Low-Sugar</option>
          <option class="restrict-option">Paleo</option>
          <option class="restrict-option">Pescatarian</option> --}}
        </select>
        <br>
        <input type="submit" class="btn btn-primary" value="Add Patient">
      </div>
    </form>
  </div>
  <div class='col-xs-1 col-sm-1 col-md-2'></div>
  <div class="col-md-6 panel panel-default error-info">
    {{#if errors}} {{#each errors}} {{> errors/error-block}} {{/each}} {{/if}}
  </div>
</div>
<div class="row">
  <div class="col-md-12 col-lg-12">
    <div class="patient-container">
    </div>
  </div>
</div>
</div>
<script src="/js/patientManager.js" type="text/javascript"></script>